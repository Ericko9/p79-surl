<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<!-- Navbar Placeholder -->
<%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>

<div class="bg-gradient-to-br from-gray-50 to-gray-200 min-h-screen flex items-center justify-center p-5">
    <div class="p-8 md:p-12 w-[60%] mt-[70px]">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-3">
                Reset Your Password
            </h1>
            <p class="text-sm text-gray-600 leading-relaxed">
                Please enter a new, secure password for your account.
            </p>
        </div>

        <!-- Alert Message -->
        <div id="message" class="mb-4 p-3 rounded-lg text-center font-medium hidden"></div>

        <!-- Form -->
        <div id="resetPasswordForm">
            <!-- New Password Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    New Password <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <input
                        type="password"
                        id="newPassword"
                        placeholder="Enter a strong password"
                        class="w-full px-4 py-3 pr-12 border-2 border-gray-300 rounded-xl
                               text-gray-700 placeholder-gray-400
                               focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                    >
                    <button type="button" id="toggleNewPassword"
                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition">
                        <svg id="eyeIconNew" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Confirm New Password <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <input
                        type="password"
                        id="confirmPassword"
                        placeholder="Re-enter your new password"
                        class="w-full px-4 py-3 pr-12 border-2 border-gray-300 rounded-xl
                               text-gray-700 placeholder-gray-400
                               focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                    >
                    <button type="button" id="toggleConfirmPassword"
                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition">
                        <svg id="eyeIconConfirm" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Update Password Button -->
            <button
                type="button"
                id="updatePasswordBtn"
                class="w-full py-4 rounded-full bg-gray-300 text-white text-base font-semibold
                       transition-all duration-300 cursor-not-allowed mb-8"
                disabled>
                Update Password
            </button>
        </div>
    </div>
</div>

<!-- Footer Placeholder -->
<%- include('./partials/footer') -%>

<script>
const API_RESET_PASSWORD = 'https://surl.jiwamu.de/api/v1/users/reset-password';

// Elements
const newPasswordInput = document.getElementById('newPassword');
const confirmPasswordInput = document.getElementById('confirmPassword');
const toggleNewPassword = document.getElementById('toggleNewPassword');
const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
const updatePasswordBtn = document.getElementById('updatePasswordBtn');
const messageBox = document.getElementById('message');

// Toggle password visibility
toggleNewPassword.addEventListener('click', () => {
    newPasswordInput.type = newPasswordInput.type === 'password' ? 'text' : 'password';
});
toggleConfirmPassword.addEventListener('click', () => {
    confirmPasswordInput.type = confirmPasswordInput.type === 'password' ? 'text' : 'password';
});

// Show message helper
function showMessage(text, type = 'success') {
    messageBox.textContent = text;
    messageBox.classList.remove('hidden');
    messageBox.className = 'mb-4 p-3 rounded-lg text-center font-medium ' + 
        (type === 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700');

    // auto hide
    setTimeout(() => messageBox.classList.add('hidden'), 5000);
}

// Password validation
function validatePassword() {
    const pw = newPasswordInput.value;
    const confirmPw = confirmPasswordInput.value;

    const isStrong = pw.length >= 8 && /\d/.test(pw) && /[!@#$%^&*(),.?":{}|<>_\-+=\[\]\\\/`~]/.test(pw);
    const match = pw === confirmPw && confirmPw !== '';

    if (isStrong && match) {
        updatePasswordBtn.disabled = false;
        updatePasswordBtn.classList.remove('bg-gray-300','cursor-not-allowed');
        updatePasswordBtn.classList.add('bg-gradient-to-r','from-blue-600','to-blue-700','hover:shadow-xl','hover:-translate-y-1','cursor-pointer');
    } else {
        updatePasswordBtn.disabled = true;
        updatePasswordBtn.classList.add('bg-gray-300','cursor-not-allowed');
        updatePasswordBtn.classList.remove('bg-gradient-to-r','from-blue-600','to-blue-700','hover:shadow-xl','hover:-translate-y-1','cursor-pointer');
    }
}

newPasswordInput.addEventListener('input', validatePassword);
confirmPasswordInput.addEventListener('input', validatePassword);

// Submit handler
updatePasswordBtn.addEventListener('click', async () => {
    if (updatePasswordBtn.disabled) return;

    // Ambil token dari query param
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');
    if (!token) {
        showMessage('Token is missing or invalid.', 'error');
        return;
    }

    try {
        updatePasswordBtn.disabled = true;
        updatePasswordBtn.textContent = 'Updating...';

        const res = await fetch(`${API_RESET_PASSWORD}?token=${token}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                password: newPasswordInput.value,
                confirmPassword: confirmPasswordInput.value
            })
        });

        const data = await res.json();

        if (res.ok && data.status) {
            showMessage(data.message, 'success');
            // Redirect ke login setelah 2 detik
            setTimeout(() => window.location.href = '/login', 2000);
        } else {
            showMessage(data.message || 'Failed to reset password.', 'error');
            updatePasswordBtn.disabled = false;
            updatePasswordBtn.textContent = 'Update Password';
        }
    } catch (err) {
        console.error(err);
        showMessage('Network error. Please try again.', 'error');
        updatePasswordBtn.disabled = false;
        updatePasswordBtn.textContent = 'Update Password';
    }
});

// Submit dengan Enter
[newPasswordInput, confirmPasswordInput].forEach(input => {
    input.addEventListener('keypress', (e) => {
        if (e.key === 'Enter' && !updatePasswordBtn.disabled) {
            updatePasswordBtn.click();
        }
    });
});
</script>
</body>
</html>
