<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<!-- Navbar Placeholder -->
<%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>

<div class="bg-gradient-to-br from-gray-50 to-gray-200 min-h-screen flex items-center justify-center p-5">
    <div class="p-8 md:p-12 w-[60%] mt-[70px]">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-3">
                Reset Your Password
            </h1>
            <p class="text-sm text-gray-600 leading-relaxed">
                Please enter a new, secure password for your account.
            </p>
        </div>

        <!-- Form -->
        <div id="resetPasswordForm">
            <!-- New Password Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    New Password <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <input
                        type="password"
                        id="newPassword"
                        placeholder="Enter a strong password"
                        class="w-full px-4 py-3 pr-12 border-2 border-gray-300 rounded-xl
                               text-gray-700 placeholder-gray-400
                               focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                    >
                    <button type="button" id="toggleNewPassword"
                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition">
                        <svg id="eyeIconNew" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </button>
                </div>
                
                <!-- Password Requirements -->
                <div class="mt-3 flex items-start text-xs">
                    <p class="ms-2 flex items-start gap-2 text-sm text-gray-600">
                        <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            viewBox="0 0 20 20" 
                            fill="currentColor" 
                            class="w-4 h-4 flex-shrink-0"
                            aria-hidden="true"
                        >
                            <path 
                                fill-rule="evenodd" 
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM9.25 8.5a.75.75 0 000 1.5h.5v4.25a.75.75 0 001.5 0V9.25a.75.75 0 00-.75-.75h-1.25z" 
                                clip-rule="evenodd"
                            />
                        </svg>
                
                        <span>
                            Must be 8+ characters with a number and a symbol (e.g., !@#).                        </span>
                    </p>
                </div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Confirm New Password <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <input
                        type="password"
                        id="confirmPassword"
                        placeholder="Re-enter your new password"
                        class="w-full px-4 py-3 pr-12 border-2 border-gray-300 rounded-xl
                               text-gray-700 placeholder-gray-400
                               focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                    >
                    <button type="button" id="toggleConfirmPassword"
                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition">
                        <svg id="eyeIconConfirm" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </button>
                </div>

                <!-- Password Match Indicator -->
                <div class="mt-3 flex items-start text-xs">
                    <p class="ms-2 flex items-start gap-2 text-sm text-gray-600">
                        <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            viewBox="0 0 20 20" 
                            fill="currentColor" 
                            class="w-4 h-4 flex-shrink-0"
                            aria-hidden="true"
                        >
                            <path 
                                fill-rule="evenodd" 
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM9.25 8.5a.75.75 0 000 1.5h.5v4.25a.75.75 0 001.5 0V9.25a.75.75 0 00-.75-.75h-1.25z" 
                                clip-rule="evenodd"
                            />
                        </svg>
                
                        <span>
                            Make sure both passwords match.                            
                        </span>
                    </p>
                </div>
            </div>

            <!-- Update Password Button -->
            <button
                type="button"
                id="updatePasswordBtn"
                class="w-full py-4 rounded-full bg-gray-300 text-white text-base font-semibold
                       transition-all duration-300 cursor-not-allowed mb-8"
                disabled>
                Update Password
            </button>
        </div>
    </div>
</div>

<!-- Footer Placeholder -->
<%- include('./partials/footer') -%>

<script>
    // Get elements
    const newPasswordInput = document.getElementById('newPassword');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const toggleNewPassword = document.getElementById('toggleNewPassword');
    const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
    const updatePasswordBtn = document.getElementById('updatePasswordBtn');
    const checkIcon1 = document.getElementById('checkIcon1');
    const checkIcon2 = document.getElementById('checkIcon2');
    const requirementText1 = document.getElementById('requirementText1');
    const requirementText2 = document.getElementById('requirementText2');

    // Toggle password visibility
    toggleNewPassword.addEventListener('click', () => {
        const type = newPasswordInput.type === 'password' ? 'text' : 'password';
        newPasswordInput.type = type;
    });

    toggleConfirmPassword.addEventListener('click', () => {
        const type = confirmPasswordInput.type === 'password' ? 'text' : 'password';
        confirmPasswordInput.type = type;
    });

    // Password validation function
    function validatePassword() {
        const newPassword = newPasswordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        // Check password requirements
        const hasMinLength = newPassword.length >= 8;
        const hasNumber = /\d/.test(newPassword);
        const hasSymbol = /[!@#$%^&*(),.?":{}|<>_\-+=\[\]\\\/`~]/.test(newPassword);
        const passwordsMatch = newPassword === confirmPassword && confirmPassword !== '';
        
        const isValidPassword = hasMinLength && hasNumber && hasSymbol;

        // Update first requirement indicator
        if (isValidPassword) {
            checkIcon1.textContent = '✓';
            checkIcon1.classList.remove('text-gray-400');
            checkIcon1.classList.add('text-green-500');
            requirementText1.classList.remove('text-gray-600');
            requirementText1.classList.add('text-green-500');
        } else {
            checkIcon1.textContent = '●';
            checkIcon1.classList.remove('text-green-500');
            checkIcon1.classList.add('text-gray-400');
            requirementText1.classList.remove('text-green-500');
            requirementText1.classList.add('text-gray-600');
        }

        // Update second requirement indicator
        if (passwordsMatch) {
            checkIcon2.textContent = '✓';
            checkIcon2.classList.remove('text-gray-400');
            checkIcon2.classList.add('text-green-500');
            requirementText2.classList.remove('text-gray-600');
            requirementText2.classList.add('text-green-500');
        } else {
            checkIcon2.textContent = '●';
            checkIcon2.classList.remove('text-green-500');
            checkIcon2.classList.add('text-gray-400');
            requirementText2.classList.remove('text-green-500');
            requirementText2.classList.add('text-gray-600');
        }

        // Enable/disable submit button
        const canSubmit = isValidPassword && passwordsMatch;
        if (canSubmit) {
            updatePasswordBtn.disabled = false;
            updatePasswordBtn.classList.remove('bg-gray-300', 'cursor-not-allowed');
            updatePasswordBtn.classList.add(
                'bg-gradient-to-r', 
                'from-blue-600', 
                'to-blue-700', 
                'hover:shadow-xl', 
                'hover:-translate-y-1',
                'cursor-pointer',
                'active:translate-y-0'
            );
        } else {
            updatePasswordBtn.disabled = true;
            updatePasswordBtn.classList.add('bg-gray-300', 'cursor-not-allowed');
            updatePasswordBtn.classList.remove(
                'bg-gradient-to-r', 
                'from-blue-600', 
                'to-blue-700', 
                'hover:shadow-xl', 
                'hover:-translate-y-1',
                'cursor-pointer',
                'active:translate-y-0'
            );
        }
    }

    // Add event listeners
    newPasswordInput.addEventListener('input', validatePassword);
    confirmPasswordInput.addEventListener('input', validatePassword);

    // Handle form submission
    updatePasswordBtn.addEventListener('click', () => {
        if (!updatePasswordBtn.disabled) {
            // Show success message
            alert('Password has been reset successfully!');
            
            // Reset form
            newPasswordInput.value = '';
            confirmPasswordInput.value = '';
            validatePassword();
            
            // Redirect to login page (uncomment when ready)
            // window.location.href = '/login';
        }
    });

    // Allow Enter key to submit
    [newPasswordInput, confirmPasswordInput].forEach(input => {
        input.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !updatePasswordBtn.disabled) {
                updatePasswordBtn.click();
            }
        });
    });
</script>

<style>
    @media (max-width: 768px) {
        .max-w-md {
            margin: 1rem;
        }
    }

    /* Smooth transitions */
    button, input {
        transition: all 0.3s ease;
    }

    /* Focus states */
    input:focus {
        transform: translateY(-1px);
    }
</style>

</body>
</html>