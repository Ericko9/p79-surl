<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shorten Your Links - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        
        .animate-float {
            animation: float 3s ease-in-out infinite;
        }
        
        .animate-pulse-bg {
            animation: pulse 15s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>
    <main role="main" class="container mx-auto px-4 max-w-6xl pt-16 md:pt-16">
        <!-- Hero Section -->
        <%- include('./partials/hero') -%>
        <!-- Features Section -->
        <div class="mt-7 mb-12 p-2 max-w-6xl mx-auto">
            <h1 class="text-xl font-bold my-2 text-gray-600">Recent Shorten Links</h1>
            <div id="links-container">
                <!-- Loading State -->
                <div id="loading" class="text-center p-10">
                    <i class="fas fa-spinner fa-spin text-3xl text-blue-600"></i>
                    <p class="mt-3 text-gray-600">Loading...</p>
                </div>
            </div>
        
        </div>
    </main>
    <%- include('./partials/footer') -%>
</body>
<script>
    const API_URL = 'http://localhost:8000/api/v1/links/my-links';
    const BASE_SHORT_URL = 'https://surl.jiwamu.de/';
    const MAX_ITEMS = 4;

    // Format date to Indonesian format
    function formatDate(dateString) {
        const date = new Date(dateString);
        const months = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 
                      'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
        return `${date.getDate()} ${months[date.getMonth()]} ${date.getFullYear()}`;
    }

    // Copy to clipboard
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert('Link berhasil disalin!');
        }).catch(err => {
            console.error('Error copying:', err);
        });
    }

    // Toggle dropdown
    function toggleDropdown(event) {
        const button = event.currentTarget;
        const dropdown = button.nextElementSibling;
        
        // Close all other dropdowns
        document.querySelectorAll('.dropdown-menu').forEach(menu => {
            if (menu !== dropdown) {
                menu.classList.add('hidden');
            }
        });
        
        dropdown.classList.toggle('hidden');
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (event) => {
        if (!event.target.closest('.dropdown-toggle') && !event.target.closest('.dropdown-menu')) {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                menu.classList.add('hidden');
            });
        }
    });

    // Create link item HTML
    function createLinkItem(link, index) {
        const shortUrl = `${BASE_SHORT_URL}${link.short_key}`;
        const borderClass = index === 0 ? 'border-t border-b border-gray-300' : 'border-b border-gray-100';
        const hoverClass = index === 0 ? '' : 'hover:bg-gray-50';
        
        return `
            <!-- Link Item ${index + 1} -->
            <div class="${borderClass} p-6 ${hoverClass} transition relative">
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <p class="text-xs text-gray-400 mb-2">${formatDate(link.created_at)}</p>
                        <div class="flex items-center gap-2">
                            <a href="${shortUrl}" class="text-blue-600 hover:underline font-medium">
                                ${shortUrl}
                            </a>
                            <button onclick="copyToClipboard('${shortUrl}')" class="text-gray-400 hover:text-gray-600">
                                <i class="far fa-copy text-sm"></i>
                            </button>
                        </div>
                        <p class="text-xs text-gray-400 mt-1">dari : ${link.redirect_uri}</p>
                    </div>
                    <div class="flex items-center gap-2 ml-4">
                        <button class="w-10 h-10 flex items-center justify-center bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition">
                            <i class="fas fa-qrcode"></i>
                        </button>
                        <button class="w-10 h-10 flex items-center justify-center bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition">
                            <i class="fas fa-chart-simple"></i>
                        </button>
                        <button onclick="toggleDropdown(event)" class="dropdown-toggle w-10 h-10 flex items-center justify-center hover:bg-gray-100 rounded-lg transition">
                            <i class="fas fa-chevron-down text-gray-400"></i>
                        </button>
                    </div>
                </div>
                <!-- Dropdown Menu -->
                <div class="dropdown-menu hidden absolute right-6 top-20 bg-white rounded-lg shadow-lg border border-gray-200 py-2 w-40 z-10">
                    <button class="w-full px-4 py-2 text-left hover:bg-gray-50 flex items-center gap-3 text-gray-700">
                        <i class="fas fa-pen text-blue-500"></i>
                        <span class="text-sm">Edit</span>
                    </button>
                    <button class="w-full px-4 py-2 text-left hover:bg-gray-50 flex items-center gap-3 text-gray-700">
                        <i class="fas fa-trash text-blue-500"></i>
                        <span class="text-sm">Delete</span>
                    </button>
                </div>
            </div>
        `;
    }

    // Fetch and display links
    async function loadLinks() {
        const container = document.getElementById('links-container');
        const loading = document.getElementById('loading');
        
        try {
            const response = await fetch(API_URL);
            
            if (!response.ok) {
                throw new Error('Failed to fetch links');
            }
            
            const result = await response.json();
            
            // Hide loading
            loading.style.display = 'none';
            
            if (result.status && result.data && result.data.length > 0) {
                // Get only top 4 items
                const topLinks = result.data.slice(0, MAX_ITEMS);
                
                // Create HTML for each link
                const linksHTML = topLinks.map((link, index) => createLinkItem(link, index)).join('');
                
                // Add View All button
                const viewAllHTML = `
                    <!-- View All Button -->
                    <div class="p-6 text-center">
                        <button class="text-blue-600 hover:text-blue-700 font-medium inline-flex items-center gap-2">
                            View All
                            <i class="fas fa-chevron-right text-sm"></i>
                        </button>
                    </div>
                `;
                
                container.innerHTML = linksHTML + viewAllHTML;
            } else {
                container.innerHTML = `
                    <div class="text-center p-10 text-gray-500">
                        <i class="fas fa-link text-4xl mb-3"></i>
                        <p>Tidak ada link yang tersedia</p>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error loading links:', error);
            loading.style.display = 'none';
            container.innerHTML = `
                <div class="text-center p-10 text-red-500">
                    <i class="fas fa-exclamation-circle text-4xl mb-3"></i>
                    <p>Gagal memuat data</p>
                    <button onclick="loadLinks()" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Coba Lagi
                    </button>
                </div>
            `;
        }
    }

    // Load links when page loads
    loadLinks();
</script> 
</html>