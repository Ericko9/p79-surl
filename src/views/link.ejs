<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shorten Your Links - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <main role="main" class="container mx-auto px-4 max-w-6xl pt-16 md:pt-16">
        <%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>
        <!-- Features Section -->
        <div class="mt-7 mb-12 p-6 max-w-6xl mx-auto">
            <!-- Header with Title, Show From, and Search -->
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-4">
                    <h1 class="text-lg font-semibold text-gray-700">Recent Shorten Links</h1>
                </div>

                <div class="flex items-center gap-3">
                    <!-- Show From Dropdown -->
                    <div class="flex items-center gap-2">
                        <span class="text-sm text-gray-600">Show from</span>
                        <select id="items-per-page" class="px-3 py-1.5 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500">
                            <option value="5">1 to 5</option>
                            <option value="8" selected>1 to 8</option>
                            <option value="10">1 to 10</option>
                            <option value="20">1 to 20</option>
                        </select>
                    </div>

                    <!-- Search Box -->
                    <div class="relative">
                        <input 
                            type="text" 
                            id="search-input" 
                            placeholder="Search by link or date" 
                            class="pl-4 pr-10 py-1.5 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 w-64"
                        />
                        <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                            <i class="fas fa-search text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Links Container -->
            <div id="links-container" class="border-t border-gray-200">
                <!-- Loading State -->
                <div id="loading" class="text-center p-10">
                    <i class="fas fa-spinner fa-spin text-3xl text-blue-600"></i>
                    <p class="mt-3 text-gray-600">Loading...</p>
                </div>
            </div>

            <!-- Pagination -->
            <div id="pagination-container" class="hidden mt-6 pt-4 border-t border-gray-200">
                <div class="flex items-center justify-center">
                    <!-- Pagination Buttons -->
                    <div class="flex items-center gap-1">
                        <button id="prev-btn" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                            <i class="fas fa-chevron-left text-xs"></i>
                        </button>
                        
                        <div id="page-numbers" class="flex items-center gap-1">
                            <!-- Page numbers will be inserted here -->
                        </div>
                        
                        <button id="next-btn" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                            <i class="fas fa-chevron-right text-xs"></i>
                        </button>
                        
                        <span id="total-pages" class="ml-2 text-sm text-gray-600"></span>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') -%>

</body>
<script>
    const API_URL = 'http://localhost:8000/api/v1/links/my-links';
    const BASE_SHORT_URL = 'https://surl.jiwamu.de/';
    
    let allLinks = [];
    let filteredLinks = [];
    let currentPage = 1;
    let itemsPerPage = 8;

    // Format date to Indonesian format
    function formatDate(dateString) {
        const date = new Date(dateString);
        const day = date.getDate();
        const months = ['Desember', 'Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 
                      'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
        const year = date.getFullYear();
        return `${day} ${months[date.getMonth()]} ${year}`;
    }

    // Copy to clipboard
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert('Link berhasil disalin!');
        }).catch(err => {
            console.error('Error copying:', err);
        });
    }

    // Toggle dropdown - handled by event delegation

    // Create link item HTML
    function createLinkItem(link) {
        const shortUrl = `${BASE_SHORT_URL}${link.short_key}`;
        
        return `
            <div class="py-4 hover:bg-gray-50 transition relative group">
                <div class="px-4">
                    <p class="text-xs text-gray-400 mb-2">${formatDate(link.created_at)}</p>
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-1">
                                <a href="${shortUrl}" target="_blank" class="text-blue-600 hover:underline font-medium text-sm">
                                    ${shortUrl}
                                </a>
                                <button onclick="copyToClipboard('${shortUrl}')" class="text-blue-400 hover:text-blue-600">
                                    <i class="far fa-copy text-xs"></i>
                                </button>
                            </div>
                            <p class="text-xs text-gray-400">from : ${link.redirect_uri}</p>
                        </div>
                        <div class="flex items-center gap-2 ml-4">
                            <button class="w-8 h-8 flex items-center justify-center bg-blue-50 text-blue-600 rounded hover:bg-blue-100 transition">
                                <i class="far fa-clone text-sm"></i>
                            </button>
                            <button class="w-8 h-8 flex items-center justify-center bg-blue-50 text-blue-600 rounded hover:bg-blue-100 transition">
                                <i class="fas fa-chart-simple text-sm"></i>
                            </button>
                            <div class="relative">
                                <button class="dropdown-toggle w-8 h-8 flex items-center justify-center hover:bg-gray-100 rounded transition">
                                    <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
                                </button>
                                <!-- Dropdown Menu -->
                                <div class="dropdown-menu hidden absolute right-0 top-10 bg-white rounded-lg shadow-lg border border-gray-200 py-2 w-16 z-50">
                                    <button class="w-full px-3 py-2 flex flex-col items-center justify-center hover:bg-gray-50 text-blue-500 gap-1">
                                        <i class="far fa-edit text-lg"></i>
                                    </button>
                                    <button class="w-full px-3 py-2 flex flex-col items-center justify-center hover:bg-gray-50 text-blue-500 gap-1">
                                        <i class="far fa-trash-alt text-lg"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }

    // Render pagination
    function renderPagination() {
        const totalPages = Math.ceil(filteredLinks.length / itemsPerPage);
        const pageNumbers = document.getElementById('page-numbers');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const totalPagesSpan = document.getElementById('total-pages');
        
        if (!pageNumbers || !prevBtn || !nextBtn || !totalPagesSpan) return;
        
        // Clear existing page numbers
        pageNumbers.innerHTML = '';
        
        // Show total pages
        totalPagesSpan.textContent = totalPages;
        
        // Calculate page range to display (max 5 pages)
        let startPage = Math.max(1, currentPage - 2);
        let endPage = Math.min(totalPages, startPage + 4);
        
        // Adjust start if we're near the end
        if (endPage - startPage < 4) {
            startPage = Math.max(1, endPage - 4);
        }
        
        // Add page numbers
        for (let i = startPage; i <= endPage; i++) {
            const activeClass = i === currentPage 
                ? 'bg-blue-500 text-white border-blue-500' 
                : 'hover:bg-gray-50 border-gray-300 text-gray-700';
            pageNumbers.innerHTML += `
                <button onclick="goToPage(${i})" class="w-8 h-8 flex items-center justify-center border rounded text-sm ${activeClass}">${i}</button>
            `;
        }
        
        // Add dots and last page if needed
        if (endPage < totalPages - 1) {
            pageNumbers.innerHTML += `<span class="px-2 text-gray-400">...</span>`;
        }
        if (endPage < totalPages) {
            pageNumbers.innerHTML += `
                <button onclick="goToPage(${totalPages})" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:bg-gray-50 text-gray-700">${totalPages}</button>
            `;
        }
        
        // Update prev/next buttons
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage === totalPages || totalPages === 0;
    }

    // Go to specific page
    function goToPage(page) {
        currentPage = page;
        renderLinks();
    }

    // Render links for current page
    function renderLinks() {
        const container = document.getElementById('links-container');
        const paginationContainer = document.getElementById('pagination-container');
        
        if (!container || !paginationContainer) return;
        
        if (filteredLinks.length === 0) {
            container.innerHTML = `
                <div class="text-center p-10 text-gray-500">
                    <i class="fas fa-link text-4xl mb-3"></i>
                    <p>Tidak ada link yang ditemukan</p>
                </div>
            `;
            paginationContainer.classList.add('hidden');
            return;
        }
        
        // Calculate start and end indices
        const startIndex = (currentPage - 1) * itemsPerPage;
        const endIndex = Math.min(startIndex + itemsPerPage, filteredLinks.length);
        const pageLinks = filteredLinks.slice(startIndex, endIndex);
        
        // Create HTML for each link
        const linksHTML = pageLinks.map((link) => createLinkItem(link)).join('');
        container.innerHTML = linksHTML;
        
        // Show pagination
        paginationContainer.classList.remove('hidden');
        renderPagination();
    }

    // Search functionality
    function handleSearch() {
        const searchInput = document.getElementById('search-input');
        if (!searchInput) return;
        
        const searchTerm = searchInput.value.toLowerCase();
        
        if (searchTerm === '') {
            filteredLinks = [...allLinks];
        } else {
            filteredLinks = allLinks.filter(link => 
                link.short_key.toLowerCase().includes(searchTerm) ||
                link.redirect_uri.toLowerCase().includes(searchTerm) ||
                formatDate(link.created_at).toLowerCase().includes(searchTerm)
            );
        }
        
        currentPage = 1;
        renderLinks();
    }

    // Change items per page
    function handleItemsPerPageChange() {
        const select = document.getElementById('items-per-page');
        if (!select) return;
        
        itemsPerPage = parseInt(select.value);
        currentPage = 1;
        renderLinks();
    }

    // Fetch and display links
    async function loadLinks() {
        const container = document.getElementById('links-container');
        const loading = document.getElementById('loading');
        
        if (!container || !loading) return;
        
        try {
            const response = await fetch(API_URL);
            
            if (!response.ok) {
                throw new Error('Failed to fetch links');
            }
            
            const result = await response.json();
            
            // Hide loading
            loading.style.display = 'none';
            
            if (result.status && result.data && result.data.length > 0) {
                allLinks = result.data;
                filteredLinks = [...allLinks];
                renderLinks();
            } else {
                container.innerHTML = `
                    <div class="text-center p-10 text-gray-500">
                        <i class="fas fa-link text-4xl mb-3"></i>
                        <p>Tidak ada link yang tersedia</p>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error loading links:', error);
            loading.style.display = 'none';
            container.innerHTML = `
                <div class="text-center p-10 text-red-500">
                    <i class="fas fa-exclamation-circle text-4xl mb-3"></i>
                    <p>Gagal memuat data</p>
                    <button onclick="loadLinks()" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Coba Lagi
                    </button>
                </div>
            `;
        }
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (event) => {
        const isDropdownToggle = event.target.closest('.dropdown-toggle');
        const isDropdownMenu = event.target.closest('.dropdown-menu');
        
        if (isDropdownToggle) {
            event.stopPropagation();
            const dropdown = isDropdownToggle.nextElementSibling;
            
            // Close all other dropdowns
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                if (menu !== dropdown) {
                    menu.classList.add('hidden');
                }
            });
            
            // Toggle current dropdown
            if (dropdown) {
                dropdown.classList.toggle('hidden');
            }
        } else if (!isDropdownMenu) {
            // Close all dropdowns when clicking outside
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                menu.classList.add('hidden');
            });
        }
    });

    // Event listeners with null checks
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('search-input');
        const itemsPerPageSelect = document.getElementById('items-per-page');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        
        if (searchInput) {
            searchInput.addEventListener('input', handleSearch);
        }
        
        if (itemsPerPageSelect) {
            itemsPerPageSelect.addEventListener('change', handleItemsPerPageChange);
        }
        
        if (prevBtn) {
            prevBtn.addEventListener('click', () => {
                if (currentPage > 1) {
                    goToPage(currentPage - 1);
                }
            });
        }
        
        if (nextBtn) {
            nextBtn.addEventListener('click', () => {
                const totalPages = Math.ceil(filteredLinks.length / itemsPerPage);
                if (currentPage < totalPages) {
                    goToPage(currentPage + 1);
                }
            });
        }
        
        // Load links when page loads
        loadLinks();
    });
</script> 
</html>