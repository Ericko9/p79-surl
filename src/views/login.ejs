<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>
<div class="bg-gradient-to-br from-gray-50 to-gray-200 min-h-screen flex items-center justify-center p-5">
    <div class="max-w-7xl w-full grid grid-cols-1 md:grid-cols-[1.2fr_1fr] gap-12 items-stretch my-[90px]">
        <!-- Left Panel -->
        <div class="bg-gradient-to-br from-blue-600 to-blue-700 
        rounded-3xl shadow-2xl p-16 text-white 
        relative overflow-hidden min-h-[700px] flex flex-col">

            <!-- Decorative background -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-10 left-10 w-20 h-20 bg-white rounded-full"></div>
                <div class="absolute bottom-20 right-20 w-32 h-32 bg-white rounded-full"></div>
                <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full"></div>
            </div>

            <!-- Content -->
            <div class="relative z-10 flex flex-col h-full">
                <div class="flex-shrink-0">
                    <h1 class="text-4xl font-bold mb-4 leading-tight">
                        Shorten Your Links, Track Every Click!
                    </h1>
                    <p class="text-lg opacity-95 leading-relaxed">
                        Create branded short links and custom QR codes instantly.<br>Monitor performance with real-time analytics.
                    </p>
                </div>

                <div class="flex-grow"></div>

                <div class="flex justify-center items-end flex-shrink-0 mt-8">
                    <img 
                        src="/images/Image4.png" 
                        alt="Dashboard Preview"
                        class="w-full max-w-lg h-auto object-contain rounded-xl shadow-xl"
                    >
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex flex-col justify-center p-8 md:p-12">
            <div class="max-w-md w-full mx-auto">
                <div class="text-center">
                    <h2 class="text-3xl font-bold text-black mb-2">Welcome Back!</h2>
                    <p class="text-gray-400 text-md mb-8">
                        Enter your email and password to manage your links.
                    </p>
                </div>

                <!-- Message Display -->
                <div id="message" class="mb-4 p-3 rounded-lg text-center font-medium hidden"></div>

                <form id="loginForm">
                    <!-- Email Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email<span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            placeholder="name@email.com"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    </div>

                    <!-- Password Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Password<span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            placeholder="Enter your password"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between mb-6 text-sm">
                        <label class="flex items-center gap-2 text-gray-600 cursor-pointer">
                            <input 
                                type="checkbox" 
                                id="remember"
                                class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                            >
                            <span>Remember Me</span>
                        </label>
                        <a href="#" id="forgotPasswordBtn" class="text-red-500 font-medium hover:underline">
                            Forgot Password?
                        </a>
                    </div>

                    <!-- Login Button -->
                    <button 
                        type="submit" 
                        id="loginBtn"
                        class="w-full py-3.5 bg-gray-300 text-white font-semibold rounded-full transition-all cursor-not-allowed"
                        disabled
                    >
                        Log In
                    </button>

                    <!-- Sign Up Link -->
                    <div class="text-center mt-6 text-sm text-gray-600">
                        Don't have an account yet? 
                        <a href="/register" class="text-blue-600 font-semibold hover:underline">
                            Sign Up
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div id="forgotModal"
        class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm">
        <div class="bg-white w-full max-w-md rounded-3xl shadow-xl overflow-hidden animate-fadeIn">
            <!-- Header -->
            <div class="relative px-8 py-8 border-b border-gray-200">
                <button id="closeForgotModal"
                    class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center
                           rounded-full border border-gray-300 text-gray-500
                           hover:bg-gray-100 hover:text-gray-700 transition text-xl">
                    &times;
                </button>
            </div>

            <!-- Content -->
            <div class="px-8 pb-6 pt-1">
                <h3 class="text-2xl font-bold text-gray-800 text-center py-1">
                    Reset Password
                </h3>

                <p class="text-gray-600 text-center mb-6 leading-relaxed">
                    Enter your registered email address and we'll send you a link to reset your password.
                </p>

                <form id="resetForm">
                    <!-- Email -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input
                            type="email"
                            id="resetEmail"
                            placeholder="name@email.com"
                            class="w-full px-5 py-3 border border-gray-300 rounded-xl
                                   text-gray-700 placeholder-gray-400
                                   focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition"
                            required
                        >
                    </div>

                    <!-- Button -->
                    <button
                        type="submit"
                        class="w-full flex items-center justify-center gap-3
                               py-3.5 rounded-full bg-blue-600 text-white text-lg font-semibold
                               hover:bg-blue-700 transition">
                        Send Reset Link
                        <!-- Arrow Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="w-5 h-5"
                             fill="none"
                             viewBox="0 0 24 24"
                             stroke="currentColor"
                             stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M5 12h14m-6-6l6 6-6 6" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') -%>

<script>
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const loginBtn = document.getElementById('loginBtn');
    const loginForm = document.getElementById('loginForm');
    const message = document.getElementById('message');
    const rememberCheckbox = document.getElementById('remember');

    function checkInputs() {
        if (emailInput.value.trim() !== '' && passwordInput.value.trim() !== '') {
            loginBtn.disabled = false;
            loginBtn.classList.remove('bg-gray-300', 'cursor-not-allowed');
            loginBtn.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'hover:shadow-lg', 'hover:-translate-y-0.5', 'cursor-pointer');
        } else {
            loginBtn.disabled = true;
            loginBtn.classList.add('bg-gray-300', 'cursor-not-allowed');
            loginBtn.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'hover:shadow-lg', 'hover:-translate-y-0.5', 'cursor-pointer');
        }
    }

    emailInput.addEventListener('input', checkInputs);
    passwordInput.addEventListener('input', checkInputs);

    loginForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Disable button during request
        loginBtn.disabled = true;
        loginBtn.textContent = 'Logging in...';

        const payload = {
            email: emailInput.value,
            password: passwordInput.value
        };

        try {
            const res = await fetch('/api/v1/auth/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include', // Important: untuk mengirim dan menerima cookies
                body: JSON.stringify(payload)
            });

            const data = await res.json();

            // Check HTTP status code (200 = OK)
            if (res.ok && data.status) {
                message.textContent = data.message || 'Login successfully! ðŸŽ‰';
                message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-green-100 text-green-700';
                message.classList.remove('hidden');

                // Redirect setelah login berhasil
                setTimeout(() => {
                    window.location.href = '/index'; // Sesuaikan dengan route dashboard Anda
                }, 1500);
            } else {
                message.textContent = data.message || 'Login failed. Please check your credentials.';
                message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-red-100 text-red-700';
                message.classList.remove('hidden');
                
                // Re-enable button
                loginBtn.disabled = false;
                loginBtn.textContent = 'Log In';
                checkInputs();
            }
        } catch (error) {
            message.textContent = 'Network error. Please try again.';
            message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-red-100 text-red-700';
            message.classList.remove('hidden');
            
            // Re-enable button
            loginBtn.disabled = false;
            loginBtn.textContent = 'Log In';
            checkInputs();
        }
    });

    // Modal handlers
    const forgotBtn = document.getElementById('forgotPasswordBtn');
    const forgotModal = document.getElementById('forgotModal');
    const closeForgotModal = document.getElementById('closeForgotModal');
    const resetForm = document.getElementById('resetForm');

    forgotBtn.addEventListener('click', (e) => {
        e.preventDefault();
        forgotModal.classList.remove('hidden');
        forgotModal.classList.add('flex');
    });

    closeForgotModal.addEventListener('click', () => {
        forgotModal.classList.add('hidden');
        forgotModal.classList.remove('flex');
    });

    forgotModal.addEventListener('click', (e) => {
        if (e.target === forgotModal) {
            forgotModal.classList.add('hidden');
            forgotModal.classList.remove('flex');
        }
    });

    resetForm.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Reset link sent! (Demo)');
        forgotModal.classList.add('hidden');
        forgotModal.classList.remove('flex');
    });
</script>

<style>
    @media (max-width: 768px) {
        .max-w-7xl {
            grid-template-columns: 1fr;
        }
    }
</style>

</body>
</html>