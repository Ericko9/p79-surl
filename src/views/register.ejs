<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<%- include('./partials/navbar', { dashboard: false, shortens: false, about: true, community: false, contributors: false }) -%>
<div class="bg-gradient-to-br from-gray-50 to-gray-200 min-h-screen flex items-center justify-center p-5">
    <div class="max-w-7xl w-full grid grid-cols-1 md:grid-cols-[1.2fr_1fr] gap-12 items-stretch my-[90px]">
        <!-- Left Panel -->
        <div class="bg-gradient-to-br from-blue-600 to-blue-700 
        rounded-3xl shadow-2xl p-16 text-white 
        relative overflow-hidden min-h-[700px] flex flex-col">

            <!-- Decorative background -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-10 left-10 w-20 h-20 bg-white rounded-full"></div>
                <div class="absolute bottom-20 right-20 w-32 h-32 bg-white rounded-full"></div>
                <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full"></div>
            </div>

            <!-- Content -->
            <div class="relative z-10 flex flex-col h-full">
                <div class="flex-shrink-0">
                    <h1 class="text-4xl font-bold mb-4 leading-tight">
                        Shorten Your Links, Track Every Click!
                    </h1>
                    <p class="text-lg opacity-95 leading-relaxed">
                        Create branded short links and custom QR codes instantly.<br>Monitor performance with real-time analytics.
                    </p>
                </div>

                <div class="flex-grow"></div>

                <div class="flex justify-center items-end flex-shrink-0 mt-8">
                    <img 
                        src="/images/Image4.png" 
                        alt="Dashboard Preview"
                        class="w-full max-w-lg h-auto object-contain rounded-xl shadow-xl"
                    >
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex flex-col justify-center p-8 md:p-12">
            <div class="max-w-md w-full mx-auto">
                <div class="text-center">
                    <h2 class="text-3xl font-bold text-black mb-2">Create Your Account</h2>
                    <p class="text-gray-400 text-md mb-8">
                        Join thousands of users and start shortening links in seconds.
                    </p>
                </div>

                <!-- Message Display -->
                <div id="message" class="mb-4 p-3 rounded-lg text-center font-medium hidden"></div>

                <form id="registerForm">
                    <!-- Username Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Username<span class="text-red-500"> *</span>
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            placeholder="Choose a unique username"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    </div>

                    <!-- Email Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email<span class="text-red-500"> *</span>
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            placeholder="e.g., alex@company.com"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    </div>

                    <!-- Password Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Password<span class="text-red-500">*</span>
                        </label>
                    
                        <input 
                            type="password" 
                            id="password" 
                            placeholder="Create a strong password"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl 
                                   focus:outline-none focus:border-blue-500 
                                   focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    
                        <p class="ms-2 mt-2 flex items-start gap-2 text-sm text-blue-600">
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 20 20" 
                                fill="currentColor" 
                                class="w-4 h-4 mt-[2px] flex-shrink-0"
                                aria-hidden="true"
                            >
                                <path 
                                    fill-rule="evenodd" 
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM9.25 8.5a.75.75 0 000 1.5h.5v4.25a.75.75 0 001.5 0V9.25a.75.75 0 00-.75-.75h-1.25z" 
                                    clip-rule="evenodd"
                                />
                            </svg>
                    
                            <span>
                                Use 8 or more characters with a mix of letters, numbers, and symbols (e.g. !@#).
                            </span>
                        </p>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm Password<span class="text-red-500">*</span>
                        </label>
                    
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            placeholder="Re-enter your password"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl 
                                   focus:outline-none focus:border-blue-500 
                                   focus:ring-4 focus:ring-blue-100 transition-all"
                            required
                        >
                    
                        <p class="ms-2 mt-2 flex items-start gap-2 text-sm text-blue-600">
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 20 20" 
                                fill="currentColor" 
                                class="w-4 h-4 mt-[2px] flex-shrink-0"
                                aria-hidden="true"
                            >
                                <path 
                                    fill-rule="evenodd" 
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM9.25 8.5a.75.75 0 000 1.5h.5v4.25a.75.75 0 001.5 0V9.25a.75.75 0 00-.75-.75h-1.25z" 
                                    clip-rule="evenodd"
                                />
                            </svg>
                    
                            <span>
                                Make sure both passwords match.
                            </span>
                        </p>
                    </div>

                    <!-- Register Button -->
                    <button 
                        type="submit" 
                        id="registerBtn"
                        class="w-full py-3.5 bg-gray-300 text-white font-semibold rounded-full transition-all cursor-not-allowed"
                        disabled
                    >
                        Create Account
                    </button>

                    <!-- Login Link -->
                    <div class="text-center mt-6 text-sm text-gray-600">
                        Already have an account?
                        <a href="/login" class="text-blue-600 font-semibold hover:underline">
                            Log In
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') -%>


<script>
    const usernameInput = document.getElementById('username');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const registerBtn = document.getElementById('registerBtn');
    const registerForm = document.getElementById('registerForm');
    const message = document.getElementById('message');

    function checkInputs() {
        const allFilled = usernameInput.value.trim() !== '' && 
                         emailInput.value.trim() !== '' && 
                         passwordInput.value.trim() !== '' && 
                         confirmPasswordInput.value.trim() !== '';
        
        if (allFilled) {
            registerBtn.disabled = false;
            registerBtn.classList.remove('bg-gray-300', 'cursor-not-allowed');
            registerBtn.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'hover:shadow-lg', 'hover:-translate-y-0.5', 'cursor-pointer');
        } else {
            registerBtn.disabled = true;
            registerBtn.classList.add('bg-gray-300', 'cursor-not-allowed');
            registerBtn.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'hover:shadow-lg', 'hover:-translate-y-0.5', 'cursor-pointer');
        }
    }

    usernameInput.addEventListener('input', checkInputs);
    emailInput.addEventListener('input', checkInputs);
    passwordInput.addEventListener('input', checkInputs);
    confirmPasswordInput.addEventListener('input', checkInputs);

    registerForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Check if passwords match
        if (passwordInput.value !== confirmPasswordInput.value) {
            message.textContent = 'Passwords do not match!';
            message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-red-100 text-red-700';
            message.classList.remove('hidden');
            return;
        }

        const payload = {
            username: usernameInput.value,
            email: emailInput.value,
            password: passwordInput.value
        };

        try {
            const res = await fetch('/api/v1/auth/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            const data = await res.json();

            // Check HTTP status code (201 = Created, 200 = OK)
            if (res.ok || res.status === 201) {
                message.textContent = 'Register berhasil ðŸŽ‰';
                message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-green-100 text-green-700';
                message.classList.remove('hidden');

                setTimeout(() => {
                    window.location.href = '/login';
                }, 1500);
            } else {
                message.textContent = data.message || 'Registration failed';
                message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-red-100 text-red-700';
                message.classList.remove('hidden');
            }
        } catch (error) {
            message.textContent = 'Network error. Please try again.';
            message.className = 'mb-4 p-3 rounded-lg text-center font-medium bg-red-100 text-red-700';
            message.classList.remove('hidden');
        }
    });
</script>

<style>
    @media (max-width: 768px) {
        .max-w-7xl {
            grid-template-columns: 1fr;
        }
    }
</style>

</body>
</html>