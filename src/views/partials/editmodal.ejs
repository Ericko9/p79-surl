<div id="editModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm p-4">
    <div class="bg-white w-full max-w-md rounded-3xl shadow-2xl overflow-hidden animate-fadeIn relative p-8">
        
        <button id="closeModalBtn" onclick="closeModal()" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times-circle text-2xl"></i>
        </button>

        <h3 class="text-2xl font-bold text-gray-800 mb-8">Edit Link</h3>

        <form id="editLinkForm" class="space-y-6">
            <input type="hidden" id="editLinkId">

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Custom Link</label>
                <div class="flex items-center border border-gray-200 rounded-xl overflow-hidden focus-within:ring-2 focus-within:ring-blue-100 transition">
                    <span class="bg-gray-50 px-4 py-3 text-gray-500 text-sm border-r border-gray-200">surl.jiwamu.de</span>
                    <input type="text" id="editCustomKey" name="custom_key" class="w-full px-4 py-3 text-sm focus:outline-none">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Destination URL</label>
                <input type="url" id="editRedirectUri" name="redirect_uri" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-100 transition">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Rules Type</label>
                <div class="relative">
                    <select id="editRulesType" name="rules_type" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm appearance-none focus:outline-none focus:ring-2 focus:ring-blue-100 transition bg-white">
                        <option value="max_click">Max Clicks</option>
                        <option value="expire_date">Expiration Date</option>
                    </select>
                    <i class="fas fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <div id="containerMaxClick">
                <label class="block text-sm font-medium text-gray-700 mb-2">Max Clicks</label>
                <input type="number" id="editMaxClick" name="max_click" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-100 transition">
            </div>

            <div id="containerExpireDate" class="hidden">
                <label class="block text-sm font-medium text-gray-700 mb-2">Expiration Date</label>
                <input type="date" id="editExpireDate" name="expire_date" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-100 transition">
            </div>

            <button type="submit" id="saveEditBtn" class="w-full py-4 bg-blue-600 text-white rounded-full font-bold hover:bg-blue-700 transition-all shadow-lg hover:shadow-blue-200">
                Save
            </button>
        </form>
    </div>
</div>